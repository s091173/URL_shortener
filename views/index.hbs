<div class="text-center">
  <h1 class="title mt-5">URL Shortener</h1>
  <a href="/"><i class="fas fa-link fa-9x mt-5"></i></a>

  <div class="text-muted mt-5">"click the logo to reset"</div>

  <form action="/shorten" method="POST" class="mt-5">

    <input type="url" id="url-input" name="url" placeholder="Input URL here" style="width: 500px;" {{#if
      shortUrl}}value="http://localhost:3000/shorten/{{shortUrl}} {{/if}}" required>

    <div class="mt-3">
      {{#unless shortUrl}}<input class="btn btn-outline-primary" type="submit" value="Shorten">{{/unless}}
      <!-- The button used to copy the text -->
      {{#if shortUrl}}<a onclick="copyOnClick()" id="copy-button" class="btn btn-outline-success">Copy</a>{{/if}}
    </div>

  </form>
</div>